{{yield
  (hash
    input=(component
      "camac-input"
      instance=@instance
      readonly=(not (contains "form" @meta.editable))
    )
    table=(component
      "camac-table"
      instance=@instance
      readonly=(not (contains "form" @meta.editable))
      model=@model
      copySource=@copySource
      copyButtonLabel=@copyButtonLabel
    )
    gwr=(component
      "camac-gwr"
      instance=@instance
      readonly=(not (contains "form" @meta.editable))
    )
    document=(component
      "camac-document"
      instance=@instance
      readonly=(or (not (contains "document" @meta.editable)) @readonly)
    )
  )
}}