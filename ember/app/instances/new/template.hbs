{{#if forms.isRunning}}
  {{#uk-flex horizontal='center' class='uk-padding uk-animation-fade'}}
    {{uk-spinner ratio=3}}
  {{/uk-flex}}
{{else}}
  <h4 class="uk-text-center uk-margin-large-bottom">Um welche Art von Gesuch handelt es sich?</h4>

  <div uk-grid class="uk-grid-small">
    <div uk-margin class="uk-width-1-1 uk-width-1-3@s uk-flex-column">
      <h4 class="uk-text-center">Vorstufe Baubewilligung {{camac-hint-dialog infoCol1}}</h4>
      {{new-form-grid-entry
        form=(find-by 'name' 'vorabklarung' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'vorentscheid-gemass-ss84-pbg' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
    </div>
    <div uk-margin class="uk-width-1-1 uk-width-1-3@s uk-flex-column">
      <h4 class="uk-text-center">Baubewilligung {{camac-hint-dialog infoCol2}}</h4>
      {{new-form-grid-entry
        form=(find-by 'name' 'baugesuch-reklamegesuch' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'projektanderung' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'technische-bewilligung' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'baumeldung-fur-geringfugiges-vorhaben' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
    </div>
    <div uk-margin class="uk-width-1-1 uk-width-1-3@s uk-flex-column">
      <h4 class="uk-text-center">Spezielle Gesuche {{camac-hint-dialog infoCol3}}</h4>
      {{new-form-grid-entry
        form=(find-by 'name' 'anlassbewilligungen-verkehrsbewilligungen' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'konzession-fur-wasserentnahme' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'projektgenehmigungsgesuch-gemass-ss15-strag' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
      {{new-form-grid-entry
        form=(find-by 'name' 'plangenehmigungsgesuch' forms.lastSuccessful.value)
        onSetForm=(action (mut model.form))
        selectedForm=model.form
      }}
    </div>
  </div>

  {{#uk-flex horizontal='right' class='uk-margin-top'}}
    {{#uk-button disabled=(or (not model.form.id) save.isRunning) loading=save.isRunning color='primary' on-click=(perform save)}}
      Weiter
    {{/uk-button}}
  {{/uk-flex}}
{{/if}}
