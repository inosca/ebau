{{#if this.constructionMonitoring.isLoading}}
  <div class="uk-text-center">
    <UkSpinner @ratio={{2}} />
  </div>
{{else}}
  <div uk-grid id="construction-monitoring" class="uk-margin-medium-bottom">
    {{#if this.constructionMonitoring.showNavigation}}
      <div class="uk-width-1-3">
          <ConstructionMonitoring::Navigation
            @constructionStages={{this.constructionMonitoring.constructionStages}}
          />
      </div>
    {{/if}}
    <div class="uk-width-expand uk-container">
      {{outlet}}
    </div>
  </div>
{{/if}}