<form class="uk-margin">
  <div class="uk-grid-small uk-width-1-4" uk-grid>
    <div>
      <label class="uk-text-bold" for="instance">{{t "statistics.dossier-number"}}</label>
      <input class="uk-input" id="instance" value={{this.instance}} {{on "input" (perform this.setInstance)}}>
    </div>
  </div>
</form>

<table class="uk-table uk-table-striped">
  <tbody>
    <tr>
      <td class="uk-text-bold">{{t "statistics.cycle-time"}}</td>
      <td class="uk-text-right">
        {{#if this.fetchCycleTimes.isRunning}}
          <UkSpinner ratio={{0.5}} />
        {{else if this.cycleTimes.total-cycle-time}}
          {{t "statistics.days" count=this.cycleTimes.total-cycle-time}}
        {{else}}
          {{t "statistics.not-available"}}
        {{/if}}
      </td>
    </tr>
    <tr>
      <td class="uk-text-bold">{{t "statistics.net-cycle-time"}}</td>
      <td class="uk-text-right">
        {{#if this.fetchCycleTimes.isRunning}}
          <UkSpinner ratio={{0.5}} />
        {{else if this.cycleTimes.net-cycle-time}}
          {{t "statistics.days" count=this.cycleTimes.net-cycle-time}}
        {{else}}
          {{t "statistics.not-available"}}
        {{/if}}
      </td>
    </tr>
  </tbody>
</table>
