<div
  class="uk-width-1-3 uk-flex uk-flex-column uk-margin-small-bottom"
  ...attributes
  data-test-filters-date-component
>
  <label for={{@filterName}} class="uk-form-label uk-text-bold">
    {{@label}}
  </label>
  <div class="uk-form-controls uk-flex-1">
    <Datepicker
      id={{concat "filter__date__" @filterName}}
      placeholder={{@placeholder}}
      @value={{@value}}
      @maxDate={{@maxDate}}
      @minDate={{@minDate}}
      @onChange={{this.onChange}}
    />
  </div>
  {{#if @hint}}
    <small data-test-filters-date-hint class="uk-text-muted">
      {{@hint}}
    </small>
  {{/if}}
</div>