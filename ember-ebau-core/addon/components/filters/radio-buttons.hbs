<div
  class="uk-margin-small-right uk-margin-small-top uk-flex uk-flex-column"
  ...attributes
>
  <label class="uk-form-label uk-text-bold">{{@label}}</label>
  <div class="uk-button-group uk-flex-wrap {{@buttonGroupClass}}">
    {{#each @options as |option|}}
      <UkButton
        @label={{option.label}}
        @color={{if (eq @selected option.value) "primary" "default"}}
        @onClick={{fn @onChange @name option.value}}
        @size={{or @size "small"}}
        data-test-filter-button={{option.value}}
      />
    {{/each}}
  </div>
</div>
