<footer class="uk-flex so-footer">
  <div class="so-footer__logo">
    <a
      href={{macroGetConfig "ember-ebau-core" "eGovPortalURL"}}
      target="_blank"
      rel="noopener noreferrer"
    >
      <img
        src="/assets/images/logo-my.so.ch-footer.png"
        alt={{t "so-footer.e-gov-title"}}
      />
    </a>
  </div>
  <div>
    <ul class="so-footer__nav">
      <li>
        <LinkTo @route="static-content" @model="portal-faq">
          {{t "nav.faq"}}
        </LinkTo>
      </li>
      <li>
        <a
          href="https://formulare-a.so.ch/bjdds_inter/start.do?event=view&generalid=Kontakt_eBauso&wfjs_enabled=true"
          target="_blank"
          rel="noopener noreferrer"
        >
          {{t "so-footer.contact"}}
        </a>
      </li>
    </ul>
  </div>
</footer>