<div class="uk-flex uk-flex-center uk-grid-large" uk-grid>
  <div class="uk-flex uk-flex-column uk-flex-middle">
    <h3 class="uk-text-center uk-margin-medium-bottom">{{t "support.title-support"}}</h3>
    <a href="tel:{{t "support.phone"}}" class="uk-card uk-card-default uk-card-body uk-link-muted uk-width-medium uk-height-medium uk-flex uk-flex-middle uk-flex-center uk-flex-column">
      <UkIcon @icon="receiver" @ratio={{3}} class="uk-margin-medium-bottom" />
      {{t "support.phone"}}
    </a>
  </div>
  <div class="uk-flex uk-flex-column uk-flex-middle">
    <h3 class="uk-text-center uk-margin-medium-bottom">{{t "support.title-questions"}}</h3>
    <div class="uk-card uk-card-default uk-card-body uk-width-medium uk-height-medium uk-flex uk-flex-middle uk-text-center">
      <p>{{t "support.info" htmlSafe=true}}</p>
    </div>
  </div>
</div>
