<LoadingOrNotfound
  @loading={{this.document.isLoading}}
  @hasPermission={{can
    "read form of instance"
    this.editController.instance
    form=this.document.value.form
    permissions=this.editController.permissions
  }}
>
  {{#if (is-embedded)}}
    <CfContent
      @documentId={{decode-id this.document.value.id}}
      @disabled={{cannot "write form of instance" this.editController.instance form=this.document.value.form}}
      @useAsHeading={{true}}
      @headingBaseLevel={{2}}
      @context={{hash instanceId=this.editController.model}}
    as |content|>
      {{#if (gt content.document.fieldsets.length 1)}}
        <div uk-grid>
          <div class="uk-width-1-1 uk-width-1-3@s"><content.navigation /></div>
          <div class="uk-width-1-1 uk-width-2-3@s">
            <content.form />
            <hr>
            <content.pagination />
          </div>
        </div>
      {{else}}
        <div class="embedded-content"><content.form /></div>
      {{/if}}
    </CfContent>
  {{else}}
    <CfContent
      @documentId={{decode-id this.document.value.id}}
      @disabled={{cannot "write form of instance" this.editController.instance form=this.document.value.form}}
      @useAsHeading={{true}}
      @headingBaseLevel={{2}}
      @context={{hash instanceId=this.editController.model}}
    />
  {{/if}}
</LoadingOrNotfound>