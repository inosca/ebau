{{#if this.data.document}}
  <CfContent
    @documentId={{this.data.document.id}}
    @context={{hash
      instanceId=this.model.id
      actionButtonOnSuccess=(perform this.getData)
    }}
    @disabled={{or
      (await (cannot "write form of instance" this.data.instance))
      (await (cannot "edit document of case" this.data.case))
    }}
  />
{{/if}}