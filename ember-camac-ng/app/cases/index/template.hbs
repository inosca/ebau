{{#if this.displaySearch}}
  <CaseFilter
    @onChange={{this.setCaseFilter}}
    @filter={{this.caseFilter}}
    @casesBackend={{this.casesBackend}}
    @instanceStates={{this.instanceStates}}
  />
{{/if}}

{{#if this.isReady}}
  <CaseTable
    @filter={{this.caseFilter}}
    @order={{this.order}}
    @hasActivation={{this.hasActivation}}
    @hasPendingBillingEntry={{this.hasPendingBillingEntry}}
    @hasPendingSanction={{this.hasPendingSanction}}
    @workflow={{this.workflow}}
    @excludeWorkflow={{this.excludeWorkflow}}
    @casesBackend={{this.casesBackend}}
    @instanceStates={{this.instanceStates}}
    @onSetOrder={{fn (mut this.order)}}
  />
{{/if}}
