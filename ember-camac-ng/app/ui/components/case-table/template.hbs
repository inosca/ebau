<div class="uk-text-right">
  {{this.paginationInfo}}
</div>

<table {{did-insert this.setup}} {{did-update this.setup @filter}}>
  <thead>
    <tr>
      {{#each this.tableHeaders as |tHeader|}}
        <th>
          {{t (concat "cases.tableHeaders." tHeader)}}
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each this.casesQuery.value as |node|}}
      <tr
        role="link"
        class={{
          if
          node.activationWarning
          (concat "activation-warning " node.activationWarning)
        }}
        {{on "click" (fn this.redirectToCase node)}}
      >
        {{#each this.tableHeaders as |tHeader|}}
          <td
            class={{
              if (eq tHeader "intent") "uk-text-truncate uk-table-expand"
            }}
          >
            {{#if (eq tHeader "applicant")}}
              {{get node (concat tHeader ".name")}}
            {{else if (eq tHeader "processingDeadline")}}
              {{moment-from (get node tHeader)}}
            {{else}}
              {{get node tHeader}}
            {{/if}}
          </td>
        {{/each}}
      </tr>
    {{else}}
      <tr>
        <td colspan={{this.tableHeaders.length}} class="uk-text-center">
          {{#if this.casesQuery.isLoading}}
            {{t "global.loading"}}
          {{else}}
            {{t "global.empty"}}
          {{/if}}
        </td>
      </tr>
    {{/each}}

    <tr>
      {{#if (and this.casesQuery.hasNextPage (not this.casesQuery.isLoading))}}
        <td colspan={{this.tableHeaders.length}} class="uk-text-center">
          <button type="button" {{on "click" this.loadNextPage}}>
            {{t "global.loadMore"}}
          </button>
        </td>
      {{/if}}
    </tr>
  </tbody>
</table>
<div class="uk-text-right">
  {{this.paginationInfo}}
</div>
