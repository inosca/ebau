<div class="uk-grid-collapse" uk-grid>
  <div class="uk-width-1-3 uk-first-column">
    <span class="uk-text-large">
      {{t "journal.title"}}
    </span>
  </div>
  <div class="uk-width-2-3">
    {{#each @journalEntries as |journalEntry|}}
      <article
        class="uk-comment uk-comment-primary uk-border-rounded uk-margin-bottom"
      >
        <div class="uk-comment-body">
          <p>
            <div class="uk-flex-column">
              <span class="uk-margin-small-right uk-flex uk-flex-between">
                <span class="uk-text-bold">
                  {{journalEntry.user.username}}
                </span>
                {{format-date journalEntry.creationDate format="datetime"}}
              </span>
              <hr class="uk-margin-small-top uk-margin-small-bottom" />

              <span class="uk-width-2-3">
                {{journalEntry.text}}
              </span>
            </div>
          </p>
        </div>
      </article>
    {{else}}
      <span class="uk-text-meta">
        {{t "journal.noEntries"}}
      </span>
    {{/each}}
  </div>
</div>
