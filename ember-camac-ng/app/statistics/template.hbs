<UkTab as |Tab|>
  <Tab.item @href="/statistics/" @linkToIndex={{true}}>{{t "statistics.general"}}</Tab.item>
  {{#if (can "view statistic" "process-time")}}
    <Tab.item @href="/statistics/process-time">{{t "statistics.process-time"}}</Tab.item>
  {{/if}}
  {{#if (can "view statistic" "cycle-time")}}
    <Tab.item @href="/statistics/cycle-time">{{t "statistics.cycle-time"}}</Tab.item>
    <Tab.item @href="/statistics/avg-cycle-time">{{t "statistics.avg-cycle-time"}}</Tab.item>
  {{/if}}
</UkTab>

{{outlet}}
